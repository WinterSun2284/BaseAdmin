<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wintersun.baseweb.mapper.ClassThemeMapper">
    <resultMap id="BaseResultMap" type="cn.wintersun.baseweb.dao.ClassTheme">
        <!--@mbg.generated-->
        <!--@Table class_theme-->
        <result column="ID" jdbcType="INTEGER" property="id"/>
        <result column="CODE" jdbcType="VARCHAR" property="code"/>
        <result column="NAME" jdbcType="VARCHAR" property="name"/>
        <result column="REMARK" jdbcType="LONGVARCHAR" property="remark"/>
        <result column="CREATE_TIME" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        ID, CODE, `NAME`, REMARK, CREATE_TIME
    </sql>

    <select id="findLarge" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from class_theme
                where length(CODE) = 2
        <if test="name != null and name != ''">
            and NAME like '%'#{name,jdbcType=VARCHAR}'%'
        </if>
        order by CODE
    </select>

    <select id="findMedium" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM class_theme
        where CODE like #{code}"%"
          and length(CODE) = 3
    </select>

    <select id="findSmall" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM class_theme
        WHERE CODE like #{code}"%"
          and length(CODE) > 3;
    </select>
</mapper>